<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/newGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New game"
        tools:layout_editor_absoluteX="289dp"
        tools:layout_editor_absoluteY="8dp" />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wheel of fortune game App"
        android:textColor="@color/purple_500"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />


    <TextView
        android:id="@+id/won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="128dp"
        android:rotation="-40"
        android:text="You Won!"
        android:textColor="@color/green"
        android:textSize="50dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/Wheel"
        app:layout_constraintEnd_toEndOf="@id/Wheel"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/Wheel"
        app:layout_constraintStart_toStartOf="@id/Wheel"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/lost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="128dp"
        android:rotation="-40"
        android:text="You Lost!"
        android:textColor="@color/red"
        android:textSize="50dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/Wheel"
        app:layout_constraintEnd_toEndOf="@id/Wheel"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/Wheel"
        app:layout_constraintStart_toStartOf="@id/Wheel"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/Wheel"
        android:layout_width="228dp"
        android:layout_height="356dp"
        android:layout_below="@id/won"
        app:srcCompat="@drawable/wheel"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="46dp" />

    <Button
        android:id="@+id/spinbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press for ´spin´"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="344dp" />

    <TextView
        android:id="@+id/wordPlacement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:letterSpacing="0.3"
        android:text="_ _ _ _ _ _ _ _ _"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/spinbutton"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/letterused"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:letterSpacing="0.3"
        android:text="a b c d e f g h i "
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/wordPlacement"
        tools:layout_editor_absoluteX="0dp" />


    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/letterlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        app:constraint_referenced_ids="a, b,c,d,e,f,g,h,i,j,k,l,m,n,o,p,q,r,s,t,u,v,x,y,z"
        app:flow_wrapMode="aligned"
        app:flow_horizontalBias="0"
        app:flow_horizontalGap="15dp"
        app:flow_verticalGap="10dp"
        app:layout_constraintTop_toBottomOf="@id/letterused"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="177dp" />

